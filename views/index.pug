html
    head
        title= 'ouijabeederboard.com'
        link(rel="stylesheet", href="/public/styles/index.css")
    body
        #leaderboard.table
            - for (i = 0; i < leaderboard.length; i++)
              .row
                p.place= (i+1) + '.'
                p.author= leaderboard[i].author
                p.comments= leaderboard[i].comments
        #content
            #metrics
                p#latest-comment Latest comment: 
                    a(href='https://test.ouijabeederboard.com/newest', target='_blank') https://test.ouijabeederboard.com/newest
                p#latest-comment-old Latest comment (old Reddit): 
                    a(href='https://test.ouijabeederboard.com/old.newest', target='_blank') https://test.ouijabeederboard.com/old.newest
                p#last-letters We are here:  
                    span.written= lastWritten
                    span.mark  ÊŒ 
                    span.remaining= firstRemaining
                p#percent Completion: 
                    span= percent
                    span %
                p#percent24 Completed in the last 24 hours: 
                    span= percent24
                    span %
                #space
                p#source Want some source code? 
                    a(href='https://github.com/MasterfulPleb/obb.com', target='_blank') https://github.com/MasterfulPleb/obb.com
            #progress
                  span.written= written
                  span.remaining= remaining
        #welcome
            h1 Welcome to oiujabeederboard.com!