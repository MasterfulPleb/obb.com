html
  head
    title= 'Welcome to ouijabeederboard.com'
    link(rel="stylesheet", href="/public/styles/index.css")
  body
    #leaderboard.table
        #headers.row
            h1.author User
            h1.comment Comments
        - for (i = 0; i < array.length; i++)
          .row
            p.author= array[i].author
            p.comment= array[i].totalComments

    //-table#leaderboard
        tr#headers
            th User
            th Comments
        //new row for each user
        - for (i = 0; i < array.length; i++)
          - var a = array[i].author
          - var c = array[i].totalComments
          tr
            td= a
            td= c